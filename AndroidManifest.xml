<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunocascio.expensis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="18"
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.brunocascio.expensis.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brunocascio.expensis.AddCapActivity"
            android:label="@string/title_activity_add_cap"
            android:parentActivityName="com.brunocascio.expensis.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brunocascio.expensis.MainActivity" />
        </activity>
        <activity
            android:name="com.brunocascio.expensis.ListExpensisActivity"
            android:label="@string/title_activity_list_expensis"
            android:parentActivityName="com.brunocascio.expensis.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brunocascio.expensis.MainActivity" />
        </activity>
    </application>

</manifest>
