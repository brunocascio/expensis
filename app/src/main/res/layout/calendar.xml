<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewExpenseActivity">

        <com.andexert.calendarlistview.library.DayPickerView
            android:id="@+id/pickerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            calendar:colorCurrentDay="@color/orange"
            calendar:colorMonthName="@color/orange"
            calendar:colorSelectedDayBackground="@color/orange"
            calendar:colorSelectedDayText="@color/orange50"
            calendar:calendarHeight="200dp"
            calendar:selectedDayRadius="0dp"/>
</RelativeLayout>